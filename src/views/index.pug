doctype html
html(lang="en").page
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="./css/main.min.css")
    title Document
  body.page__body
    header.header
      .container.header__container
        a(href="#").header__logo  HotCoffee
        .header__search-wrap
          input(type="text" placeholder="Search...").header__search-input
        .header__inner
          nav.nav.header__nav
            ul.nav__list
              li.nav__item
                a(href="#").nav__link Home
              li.nav__item
                a(href="#").nav__link Articles
            ul.nav__social-list
              li.nav__social-item
                a(href="#").nav__social-item
                  svg.nav__social-icon
                    use(xlink:href="./img/icons/icons.svg#instagram")
              li.nav__social-item
                a(href="#").nav__social-item
                  svg.nav__social-icon
                    use(xlink:href="./img/icons/icons.svg#twitter")
              li.nav__social-item
                a(href="#").nav__social-item
                  svg.nav__social-icon
                    use(xlink:href="./img/icons/icons.svg#linkedin")
    main.main
      .container
        section.offer
          .offer__text-wrap
            h1.offer__title Make better
              br
              span.offer__title--coffee coffee
            span.offer__description why learn how to blog?
          img(src="./img/offer/offer-image.jpg" alt="Абстракция двух мужчин и женщины с усами" srcset="").offer__img
    footer.footer
